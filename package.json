{
  "name": "inventory-app",
  "version": "0.1.29",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "dev:debug": "NODE_OPTIONS='--inspect=0.0.0.0' next dev",
    "dev:monitor": "./scripts/monitor-logs.sh",
    "dev:clean": "pkill -f 'next dev' && sleep 2 && npm run dev",
    "dev:restart": "pkill -f 'next dev' && sleep 2 && rm -rf .next && npm run dev",
    "build": "next build",
    "build:check": "npm run build && echo 'âœ… Build successful'",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "test:server": "curl -I http://localhost:3000",
    "logs": "tail -f dev.log",
    "logs:error": "grep -i 'error\\|failed\\|exception' dev.log",
    "version:patch": "./scripts/version-update.sh patch",
    "version:minor": "./scripts/version-update.sh minor",
    "version:major": "./scripts/version-update.sh major",
    "version:show": "echo \"Version actuelle: $(grep 'APP_VERSION' src/lib/version.ts | sed 's/.*\"\\(.*\\)\".*/\\1/')\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@supabase/supabase-js": "^2.76.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "html5-qrcode": "^2.3.8",
    "lucide-react": "^0.546.0",
    "next": "16.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.65.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "puppeteer": "^24.26.1",
    "shadcn": "^3.4.2",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
